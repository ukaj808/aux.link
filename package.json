{
  "name": "augslink-service",
  "version": "1.0.0",
  "watch": {
    "dev": {
      "patterns": [
        "app",
        "static",
        "views",
        "."
      ],
      "extensions": "js,css,html,hs"
    }
  },
  "scripts": {
    "watch": "npm-watch",
    "dev": "webpack && cabal run -- augslink-service --public dist --home views/home.html --aw dist/aux-audio-worker-ws-impl.js",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.5",
    "@babel/core": "^7.22.1",
    "@babel/preset-env": "^7.22.4",
    "@babel/preset-typescript": "^7.21.5",
    "@types/audioworklet": "^0.0.46",
    "@types/flickity": "^2.2.7",
    "copy-webpack-plugin": "^11.0.0",
    "npm-watch": "^0.11.0",
    "source-map-loader": "^4.0.1",
    "ts-loader": "^9.4.3",
    "typescript": "^5.0.4",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "flickity": "^3.0.0"
  }
}
